{
    "name": "Zunios",
    "short_name": "Zunios",
    "description": "The operating system for your consciousness.",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#050510",
    "theme_color": "#050510",
    "orientation": "portrait",
    "icons": [
        {
            "src": "/icon.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "New Mission",
            "short_name": "Task",
            "description": "Deploy a new objective",
            "url": "/?mode=task",
            "icons": [
                {
                    "src": "/icon.svg",
                    "sizes": "192x192"
                }
            ]
        },
        {
            "name": "Think",
            "short_name": "Think",
            "description": "Log a thought",
            "url": "/?mode=thought",
            "icons": [
                {
                    "src": "/icon.svg",
                    "sizes": "192x192"
                }
            ]
        }
    ],
    "share_target": {
        "action": "/share-target",
        "method": "GET",
        "enctype": "application/x-www-form-urlencoded",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+zunios",
            "url": "/?mode=%s"
        }
    ]
}